    <select id="selectLikeByUserId" parameterType="int">
        SELECT
            `userId`
            ,`postId`
            ,`filledLike`
            ,`createdAt`
        FROM
            `like`
        WHERE
            `userId` = #{userId}
            AND `filledLike` = 1
    </select>
    <select id="selectLikeByPostId" parameterType="map">
        SELECT
            `userId`
            ,`postId`
            ,`filledLike`
            ,`createdAt`
        FROM
            `like`
        WHERE
            `postId` = #{postId}
            AND `filledLike` = 1
    </select>
    <insert id="insertLikeByUserIdPostId" parameterType="map">
        INSERT INTO `like`
        (
            `userId`
            ,`postId`
            ,`filledLike`
            ,`createdAt`
        )
        VALUES
        (
            #{userId}
            , #{postId}
            , #{filledLike}
            , NOW()
        )
    </insert>
    <update id="updateLikeByUserIdPostId" parameterType="map">
        UPDATE `like`
        SET
            `filledLike` = #{filledLike}
        WHERE
            `userId` = #{userId}
            AND `postId` = #{postId}
    </update>
</mapper>